doctype html
html(lang="es")
    head
        meta(charset="utf-8")
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        <!-- Mobile viewport optimization h5bp.com/ad -->
        meta(name="HandheldFriendly", content="True")
        meta(name="MobileOptimized", content="320")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        meta(http-equiv="cleartype", content="on")
        meta(name="revisit-after", content="3 month")
        meta(name="robots", content="index, follow")
        meta(name="author", content="Smartinez")
        block vars
            - var title="Conoce la nueva línea de la Serie CP de QSC -- Yamaki";
            - var subtitle="Yamaki";
            - var description="Conoce la nueva línea de la Serie CP de QSC -- Yamaki";
            - var abstract='Rendimiemto, Calida y confiabilidad de QSC a precio razonable.'
            - var keywords='yamaki, qsc, Sonido'
            - var url='www.yamaki.com.co/cpseries'
            - var image=''
            - var canonical=''
            - var shortlink=''
        block seo
            title #{title} - #{subtitle}
            meta(name="description", content=description)
            meta(name="abstract", content=abstract)
            meta(name="keywords", content=keywords)
            link(rel="canonical", href=canonical)
            link(rel="shortlink", href=shortlink)
        block seo-facebook
            meta(property="og:title", content=title)
            meta(property="og:type", content="website")
            meta(property="og:image", content=image)
            meta(property="og:url", content=url)
            meta(property="og:site_name", content="web")
            meta(property="og:description", content=description)
        block seo-twitter
            meta(name="twitter:url", content=url)
            meta(name="twitter:title", content=title)
            meta(name="twitter:description", content=description)
        block css
            //link(href='https://cdn.jsdelivr.net/jquery.slick/1.3.15/slick.css' , rel="stylesheet", media="screen")
            link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css' , rel="stylesheet", media="screen")
            //- link(href='css/normalize.css', rel="stylesheet", media="screen")
            link(href='css/style.css', rel="stylesheet", media="screen")
            link(href="https://fonts.googleapis.com/css?family=Nunito:400,600,700,800|Roboto:400,500,700", rel="stylesheet")
        block top-script
            script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
            //--script(src="js/modernizr.js")
            //- script(src="js/jquery.js")
            //- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
            <!--[if lt IE 9]>
            script(src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.0/html5shiv.js")
            script(src="//cdnjs.cloudflare.com/ajax/libs/respond.js/1.4.2/respond.js")
            <![endif]-->
    body(style="position: relative;")
        include ./_includes/_header.pug
        block content
        include ./_includes/_footer.pug
        block bottom-script
            script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js")
            script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
            //script(src="https://cdnjs.cloudflare.com/ajax/libs/slick-carousel/1.6.0/slick.min.js")
            script(src='js/custom.js')